<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSearchContact">

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="454dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245">

        <EditText
            android:id="@+id/textSearchContact"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/hintSearchText"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonSearchContact"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:text="@string/search_contacts" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewSearchContacts"
            android:layout_width="match_parent"
            android:layout_height="243dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>